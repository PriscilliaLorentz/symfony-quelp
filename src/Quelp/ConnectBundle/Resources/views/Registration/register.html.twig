{# Cette page est la page home des pages connections d'inscription #}

{% extends "QuelpConnectBundle::layout.html.twig" %}

{% block title %} Accueil {% endblock %}

{% block content %}

    <div class="content clearfix" style="margin-top: 30px">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-sm-5 col-lg-offset-1 col-sm-offset-1">
                    <h1 style="color: #ffffff;margin-bottom: 40px;">Quelp <small style="color: #ffffff">est un réseau social.</small></h1>
                    <div class="col-lg-9">
                        <p style="color: #ffffff;font-size: 16px; line-height: 30px;text-align: center;font-weight: 200">Ce réseau social offre aux utilisateurs, la possibilité de demander de l'aide à d'autres utilisateurs. N'attendez plus, inscrivez-vous !</p>
                    </div>
                    <!-- Carousel Home Connect -->
                    <div class="col-lg-9" style="margin-top: 30px">
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" style="border: 1px solid #f5f5f5;border-radius: 10px">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            </ol>

                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img src="{{ asset('bundles/front/img/messages.png') }}" alt="...">
                                    <div class="carousel-caption">

                                    </div>
                                </div>
                                <div class="item">
                                    <img src="{{ asset('bundles/front/img/search_gris.png') }}" alt="...">
                                    <div class="carousel-caption">

                                    </div>
                                </div>

                            </div>

                            <!-- Controls -->
                            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Formulaire pour inscription -->
                <div class="col-sm-5">
                    <h1 style="color: #ffffff;margin-bottom: 50px">Inscrivez-vous<small style="color: #ffffff">, c'est gratuit !</small></h1>
                    {% block fos_user_content %}


                        {% trans_default_domain 'FOSUserBundle' %}


                        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal form-connexion">

                            {# Nom d'utilisateur #}
                            <div class=" form-group">
                                <span class="label-from-form col-sm-3 control-label">{{ form_label(form.username, "Identifiant ") }}</span>
                                    <div class="col-sm-9">
                                        <span class="input-from-form">{{ form_widget(form.username, {'attr': {'placeholder': 'Entrez votre identifiant'}}) }}</span>
                                    </div>
                                    <span class="error-from-form">{{ form_errors(form.username) }}</span>
                            </div>

                            <div class="form-group">
                                <span class="label-from-form col-sm-3 control-label">{{ form_label(form.name, "Nom ") }}</span>
                                <div class="col-sm-4 inline-user" style="width: 37%">
                                    <span class="input-from-form">{{ form_widget(form.name, {'attr': {'placeholder': 'Entrez votre nom'}}) }}</span>
                                </div>
                                <div class="col-sm-4" style="margin-left: -20px;width: 41%">
                                    <span class="input-from-form">{{ form_widget(form.surname, {'attr': {'placeholder': 'Entrez votre prenom'}}) }}</span>
                                </div>
                                <span class="error-from-form">{{ form_errors(form.surname) }}</span>
                            </div>

                            {# Adresse mail #}
                            <div class="form-group">
                                <span class="label-from-form col-sm-3 control-label">{{ form_label(form.email, "E-mail ") }}</span>
                                <div class="col-sm-9">
                                    <span class="input-from-form">{{ form_widget(form.email, {'attr': {'placeholder': 'Entrez votre email'}}) }}</span>
                                </div>
                                <span class="error-from-form">{{ form_errors(form.email) }}</span>
                            </div>
                            {# Mot de passe #}
                            <div class="form-group">
                                <span class="label-from-form col-sm-3 control-label">{{ form_label(form.plainPassword.first, "Mot de passe ") }}</span>
                                <div class="col-sm-9">
                                    <span class="input-from-form">{{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Entrez votre mot de passe'}}) }}</span>
                                </div>
                                <span class="error-from-form">{{ form_errors(form.plainPassword.first) }}</span>
                            </div>
                            {# Confirmation du mot de passe #}
                            <div class="form-group">
                                <span class="label-from-form col-sm-3 control-label">{{ form_label(form.plainPassword.second, "Confirmation") }}</span>
                                <div class="col-sm-9">
                                    <span class="input-from-form">{{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Entrez de nouveau votre mot de passe'}}) }}</span>
                                </div>
                                <span class="error-from-form">{{ form_errors(form.plainPassword.second) }}</span>
                            </div>
                               {#job#}
                            <div class="form-group">
                                <span class="label-from-form col-sm-3 control-label">{{ form_label(form.job, "Job") }}</span>
                                <div class="col-sm-9">
                                    <span class="input-from-form">{{ form_widget(form.job, {'attr': {'placeholder': 'Entrez votre job'}}) }}</span>
                                </div>
                                <span class="error-from-form">{{ form_errors(form.job) }}</span>
                            </div>
                            {#born date#}

                            <div class="form-group birthday-date">
                                <span class="label-from-form col-sm-3 control-label">{{ form_label(form.bornDate) }}</span>
                                <div class="col-sm-9">
<!--                                    <input type="date" name="birthDate" required>-->
                                    <span class="input-from-form selectpicker">{{ form_widget(form.bornDate, {'attr': {'placeholder': 'Entrez votre bornDate'}}) }}</span>
                                </div>
                                <span class="error-from-form">{{ form_errors(form.bornDate) }}</span>
                            </div>
                            {{ form_rest(form) }}
                            {# Inscription #}
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-10">
                                    <button type="submit" class="btn btn-default" style="background: url('/2SN/web/bundles/front/img/bg_Foto.jpg');color: #ffffff;padding: 10px 30px 10px 30px">S'inscrire</button>
                                </div>
                            </div>
                            <!--<div>
                                <input type="submit" value="{{ 'registration.submit'|trans }}" />
                            </div>-->
                        </form>

                    {% endblock fos_user_content %}

                </div>
            </div>
        </div>
    </div>


{% endblock %}